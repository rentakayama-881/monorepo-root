# ===========================================
# AlephDraad Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ------------------------------------------
# Database Configuration
# ------------------------------------------
DATABASE_URL=postgres://user:password@localhost:5432/alephdraad?sslmode=disable
DB_SSLMODE=disable
# Or use individual DB connection parameters:
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=yourpassword
# DB_NAME=alephdraad

# ------------------------------------------
# JWT Authentication
# ------------------------------------------
JWT_SECRET=your-secret-key-minimum-32-characters-long

# ------------------------------------------
# Server Configuration
# ------------------------------------------
PORT=8080
GIN_MODE=debug
LOG_LEVEL=debug
FRONTEND_BASE_URL=http://localhost:3000

# ------------------------------------------
# CORS Configuration
# ------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ------------------------------------------
# Email Service (Resend)
# Get your API key from https://resend.com/api-keys
# ------------------------------------------
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ------------------------------------------
# Payment Gateway (Xendit)
# Get your API key from https://dashboard.xendit.co/settings/developers
# ------------------------------------------
XENDIT_API_KEY=xnd_development_xxxxxxxxxxxxx
XENDIT_CALLBACK_TOKEN=your_callback_verification_token
XENDIT_WEBHOOK_URL=https://yourdomain.com/api/webhooks/xendit

# ------------------------------------------
# Supabase Storage (for avatars/uploads)
# ------------------------------------------
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_BUCKET=avatars

# ------------------------------------------
# AI/RAG (Cohere)
# ------------------------------------------
COHERE_API_KEY=your-cohere-api-key
COHERE_MODEL=embed-multilingual-v3.0
COHERE_ENDPOINT=https://api.cohere.ai
COHERE_CHAT_MODEL=command-r-plus
COHERE_RERANK_MODEL=rerank-english-v3.0

# ------------------------------------------
# Rate API (optional)
# ------------------------------------------
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
RATE_CACHE_TTL_SECONDS=300

# ------------------------------------------
# Development Only
# ------------------------------------------
# Set to "true" to enable demo/simulation endpoints
ENABLE_DEMO_ENDPOINTS=false

# ------------------------------------------
# Legacy (Smart Contract - not used anymore)
# ------------------------------------------
# BACKEND_SIGNER_PRIVATE_KEY=
# ESCROW_FACTORY_ADDRESS=
# CHAIN_ID=137
# RPC_URL=
NEXT_PUBLIC_API_BASE_URL=