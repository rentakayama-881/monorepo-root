# ========================================
# Feature Service Environment Variables
# ========================================
# Copy this file to .env and fill in your values

# JWT Configuration (MUST match Go backend)
JWT__SECRET=your-jwt-secret-here-must-match-gin-backend
JWT__ISSUER=api.aivalid.id
JWT__AUDIENCE=alephdraad-clients

# MongoDB
MONGODB__CONNECTIONSTRING=mongodb://127.0.0.1:27017
MONGODB__DATABASENAME=feature_service_db

# Redis (Idempotency / caching)
# Best practice for managed Redis: use TLS (rediss://) and strong auth.
REDIS__CONNECTIONSTRING=rediss://default:your-redis-password@your-redis-host:6379/0
REDIS__REQUIRETLS=true
# Optional (only needed if not included in the URL)
# REDIS__USER=default
# Optional SNI host override (rare)
# REDIS__SSLHOST=your-redis-host

# CORS - Frontend URLs
CORS__ALLOWEDORIGINS__0=https://aivalid.id

# ASP.NET Core
ASPNETCORE_URLS=http://127.0.0.1:5000
ASPNETCORE_ENVIRONMENT=Production

# Go Backend Integration (for admin actions)
GOBACKEND__BASEURL=http://localhost:8080
GOBACKEND__INTERNALAPIKEY=your-internal-api-key
